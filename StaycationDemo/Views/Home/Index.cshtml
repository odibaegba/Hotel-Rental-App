<div class="section">
    <h4>Most Picked</h4>
    <div class="mp">
		<img src="~/images/mostpicked/pic.png" />
        <div class="inside-mp">
            @for (int i = 1; i < Model.Hotels.Where(h => h.IsMostPicked == true).Count<Suite>(); i++)
            {
                var hotels = Model.Hotels.Where(h => h.IsMostPicked == true).ToList<Suite>();
                <img id="other-mp" src="@hotels[i].ImageUrl" />
            }
        </div>
    </div>
</div>

@foreach (var c in Model.AllCategories)
{
    <div class="section">
        <h4>@c.CategoryName</h4>
        <div class="inside">
            
            @foreach (var hotel in Model.Hotels.Where(h => (h.CategoryId == c.CategoryId)))
            {
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail">
                        <img id="sec-img" src="@hotel.ImageUrl" />
                        <div class="caption">
                            <p>
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@hotel.HotelId">@hotel.Name</a>
                                <br>
                                @hotel.Location
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
