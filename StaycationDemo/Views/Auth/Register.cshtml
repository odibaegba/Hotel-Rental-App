@model RegisterViewModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Register";
}



<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card my-5">
                <form class="card-body cardbody-color p-lg-5" asp-controller="Auth" asp-action="Register" method="post">
                    <div class="text-danger" id="thead" asp-validation-summary="All"></div>
                    <h1 class="text-center">Sign Up</h1>

                    <div class="form-floating mb-3 mt-3">
                        <label asp-for="FirstName" class="label-control">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 mt-3">
                        <label asp-for="LastName" class="label-control">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 mt-3">
                        <label asp-for="Email" class="label-control">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3 mt-3">
                        <label asp-for="Password" class="label-control"></label>
                        <input type="password" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="text-center"><button type="submit" class="btn-primary" id="btn2">Create Account </button></div>
                    <div class="form-text text-center mb-5 text-dark">
                        Already have an account? <a asp-controller="Auth" asp-action="Login" class="signUp-text">Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>